<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- 1) 홈 프래그먼트 -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fitmatchmain.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <!-- Home → Match 로 가는 액션 추가 -->
        <action
            android:id="@+id/action_home_to_match"
            app:destination="@id/matchFragment" />

    </fragment>

    <!-- 1) 운동 탭: ExerciseSettingFragment 연결 -->
    <fragment
        android:id="@+id/navigation_exercise"
        android:name="com.example.fitmatchmain.ui.exercise.ExerciseSettingFragment"
        android:label="@string/title_exercise"
        tools:layout="@layout/fragment_exercise_setting" >

        <!-- ExerciseSettingFragment → ExerciseMatchFragment 액션 -->
        <action
            android:id="@+id/action_exercise_to_match"
            app:destination="@id/exerciseMatchFragment" />
    </fragment>

    <!-- 새로 추가할 매칭 Fragment -->
    <fragment
        android:id="@+id/exerciseMatchFragment"
        android:name="com.example.fitmatchmain.ui.exercise.ExerciseMatchFragment"
        android:label="매칭"
        tools:layout="@layout/fragment_exercise_match" />

    <!-- 3) 매칭완료 후 홈 화면용 MatchFragment 정의 -->
    <fragment
        android:id="@+id/matchFragment"
        android:name="com.example.fitmatchmain.ui.match.MatchFragment"
        android:label="Match"
        tools:layout="@layout/fragment_match_status" />

    <!-- 4) SettingFragment 추가 -->
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.fitmatchmain.ui.setting.SimpleSettingFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_setting" />

</navigation>
