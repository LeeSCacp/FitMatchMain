<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- 1) 홈 프래그먼트 -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fitmatchmain.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <!-- Home → Match 로 가는 액션 추가 -->
        <action
            android:id="@+id/action_home_to_match"
            app:destination="@id/matchFragment" />

    </fragment>

    <!-- 2) 기존 대시보드, 노티피케이션 프래그먼트들 -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fitmatchmain.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fitmatchmain.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- 3) 매칭 화면용 MatchFragment 정의 -->
    <fragment
        android:id="@+id/matchFragment"
        android:name="com.example.fitmatchmain.ui.match.MatchFragment"
        android:label="Match"
        tools:layout="@layout/fragment_match" />

    <!-- 4) SettingFragment 추가 -->
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.fitmatchmain.ui.setting.SimpleSettingFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_setting" />

</navigation>
