<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 계좌 및 결제 정보 -->
    <PreferenceCategory
        android:key="cat_payment"
        android:title="계좌 및 결제 정보">

        <Preference
            android:key="pref_manage_subscription"
            android:title="구독 플랜 관리"
            android:summary="월간/연간 플랜 보기 및 변경" />

        <Preference
            android:key="pref_payment_methods"
            android:title="결제 수단 관리"
            android:summary="카드·계좌 추가/수정" />
    </PreferenceCategory>

    <!-- 데이터 동기화 & 백업 -->
    <PreferenceCategory
        android:key="cat_data_sync"
        android:title="데이터 동기화 &amp; 백업">

        <SwitchPreferenceCompat
            android:key="pref_cloud_sync"
            android:title="클라우드 동기화"
            android:summary="Google 계정으로 자동 동기화"
            android:defaultValue="true" />

        <Preference
            android:key="pref_manual_backup"
            android:title="지금 백업하기"
            android:summary="수동으로 데이터 백업 실행" />
    </PreferenceCategory>

    <!-- 디바이스 및 센서 관리 -->
    <PreferenceCategory
        android:key="cat_devices"
        android:title="디바이스 및 센서 관리">

        <Preference
            android:key="pref_manage_devices"
            android:title="연동 디바이스 관리"
            android:summary="스마트워치·밴드 목록 확인" />

        <ListPreference
            android:key="pref_sensor_sync_interval"
            android:title="센서 데이터 동기화 주기"
            android:entries="@array/sensor_sync_entries"
            android:entryValues="@array/sensor_sync_values"
            android:defaultValue="15"
            android:summary="%s 분" />
    </PreferenceCategory>

    <!-- 개인 정보 관리 -->
    <PreferenceCategory
        android:key="cat_profile"
        android:title="개인 정보 관리">

        <Preference
            android:key="pref_edit_profile"
            android:title="개인 정보 수정"
            android:summary="이름·이메일·생년월일 변경" />

        <Preference
            android:key="pref_delete_account"
            android:title="계정 삭제"
            android:summary="모든 데이터 영구 삭제"
            android:icon="@android:drawable/ic_delete" />
    </PreferenceCategory>

    <!-- 앱 고급 옵션 -->
    <PreferenceCategory
        android:key="cat_dev_options"
        android:title="앱 고급 옵션">

        <SwitchPreferenceCompat
            android:key="pref_beta_features"
            android:title="베타 기능 참여"
            android:summary="새로운 기능 사전 사용"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            android:key="pref_send_logs"
            android:title="문제 발생 시 로그 전송"
            android:summary="고객센터에 자동 로그 첨부"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            android:key="pref_dev_mode"
            android:title="개발자 모드"
            android:summary="디버깅 및 API 설정 토글"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>
